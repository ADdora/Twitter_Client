<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CollapsingTextAppearance.TitleSize">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomPopToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
